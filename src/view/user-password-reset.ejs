<div class="login-container">
    <h2 class="text-center">Forget Password</h2>
    <% if(error){ %>
        <ul>
            <li class="error-message">
                <%= error.msg %>
            </li>
        </ul>
        <% } %>
            <form id="user-password-reset">
                <label for="email">Email<span class="value-required">*</span></label>
                <input type="email" id="email" name="email" />
                <button type="submit" class="text-center" id="forget-password">Submit</button>
            </form>
            <p>Login to an account? <a href="/login">Login</a></p>
</div>